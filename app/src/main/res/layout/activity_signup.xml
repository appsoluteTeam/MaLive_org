<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SignupActivity">

    <ImageButton
        android:id="@+id/btn_backkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF"
        android:src="@drawable/back_key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email_sign"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="malive@malive.com"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_top" />

    <EditText
        android:id="@+id/pass_sign"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="비밀번호 (영문, 숫자 조합 8자 이상)"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/email_sign"
        app:layout_constraintStart_toStartOf="@+id/email_sign"
        app:layout_constraintTop_toBottomOf="@+id/email_sign" />

    <EditText
        android:id="@+id/pwd_check"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="비밀번호 재입력"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/pass_sign"
        app:layout_constraintStart_toStartOf="@+id/pass_sign"
        app:layout_constraintTop_toBottomOf="@+id/pass_sign" />

    <ImageView
        android:id="@+id/img_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="@+id/pwd_check"
        app:layout_constraintTop_toBottomOf="@+id/pass_sign" />

    <ImageView
        android:id="@+id/img_check2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="@+id/pass_sign"
        app:layout_constraintTop_toBottomOf="@+id/email_sign" />

    <Button
        android:id="@+id/btn_next1"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:stateListAnimator="@null"
        android:text="다음"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_wanning"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/tv_wanning"
        app:layout_constraintTop_toBottomOf="@+id/tv_wanning" />


    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="40dp"
        android:text="가입할 \n이메일과 비밀번호를 \n입력해주세요"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_backkey" />

    <TextView
        android:id="@+id/tv_wanning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="#90DCEE"
        app:layout_constraintEnd_toEndOf="@+id/pwd_check"
        app:layout_constraintStart_toStartOf="@+id/pwd_check"
        app:layout_constraintTop_toBottomOf="@+id/pwd_check" />


</androidx.constraintlayout.widget.ConstraintLayout>