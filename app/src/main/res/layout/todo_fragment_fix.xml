<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="50sp">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="5sp"
        android:background="@drawable/write_background2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30sp"
                android:alpha="0.6"
                android:text="To DO LIST\n  하루 할 일"
                android:textColor="#2E2E2E"
                android:textSize="12sp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="60sp"
                android:text="TO DO List\n 고정 할 일"
                android:textSize="14sp">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="고정 리스트"
            android:textSize="13sp">
        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fix_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2sp"
            android:layout_marginTop="2sp">
        </androidx.recyclerview.widget.RecyclerView>
        <View
            android:layout_width="375dp"
            android:layout_height="1dp"
            android:layout_marginLeft="7sp"
            android:background="#BDBDBD">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2sp">
            <TextView
                android:id="@+id/fix_todo_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="308sp"
                android:text="수정">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|">
            </TextView>
            <TextView
                android:id="@+id/fix_todo_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="삭제">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2sp"
            android:layout_marginTop="7sp"
            android:layout_marginBottom="7sp"
            android:text="카테고리"
            android:textColor="#2E2E2E"
            android:textSize="15sp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:layout_marginLeft="7sp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="청소하기"
                android:textSize="13sp"
                android:textColor="#1C1C1C"
                android:textAlignment="center"
                android:background="@drawable/todo_text_background"
                android:id="@+id/clean_todo_image_text"
                android:gravity="center_horizontal">
            </TextView>
            <TextView
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="빨래하기"
                android:textSize="13sp"
                android:textColor="#1C1C1C"
                android:textAlignment="center"
                android:background="@drawable/todo_text_background"
                android:id="@+id/laundry_todo_image_text"
                android:gravity="center_horizontal">
            </TextView>
            <TextView
                android:layout_marginLeft="10sp"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="쓰레기"
                android:textSize="13sp"
                android:textColor="#1C1C1C"
                android:textAlignment="center"
                android:background="@drawable/todo_text_background"
                android:id="@+id/trash_todo_image_text"
                android:gravity="center_horizontal">
            </TextView>
            <TextView
                android:layout_marginLeft="10sp"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="기타"
                android:textSize="13sp"
                android:textColor="#1C1C1C"
                android:textAlignment="center"
                android:background="@drawable/todo_text_background"
                android:id="@+id/etc_todo_image_text"
                android:gravity="center_horizontal">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3sp"
            android:layout_marginTop="15sp"
            android:text="할 일 추가하기"
            android:textColor="#2E2E2E"
            android:textSize="14sp">
        </TextView>
        <EditText
            android:id="@+id/todo_write2"
            android:layout_width="370dp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginStart="2sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="2sp"
            android:background="@drawable/edit_black"
            android:hint="고정 할 일 입력">
        </EditText>
        <View
            android:layout_width="100sp"
            android:layout_height="1sp"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            android:background="#2E2E2E">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:text="날짜">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70sp">
            <NumberPicker
                android:id="@+id/set_period"
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:layout_weight="1">
            </NumberPicker>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elegantTextHeight="true"
                android:text="|"
                android:textColor="#BDBDBD"
                android:textSize="30sp">
            </TextView>
            <NumberPicker
                android:id="@+id/set_period_day"
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:layout_weight="1">
            </NumberPicker>
        </LinearLayout>
        <Button
            android:id="@+id/write"
            android:layout_width="120sp"
            android:layout_height="40sp"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="22sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/todo_button_background"
            android:text="등록하기"
            android:textColor="#2E2E2E">
        </Button>
    </LinearLayout>
</LinearLayout>